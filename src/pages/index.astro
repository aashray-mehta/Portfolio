---
import Header from '../components/Header.astro'
import ProjectCard from '../components/ProjectCard.astro'
import { projects } from '../data/projects'
import '../styles/global.css'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Aashray Mehta</title>
    <meta name="description" content="Aashray Mehta â€” building things on the internet." />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <main class="mx-auto max-w-2xl px-6 py-20">
      <Header />

      <section>
        <h2 class="mb-6 font-mono text-sm font-semibold uppercase tracking-widest text-neutral-500">
          Projects
        </h2>
        <div class="grid gap-4">
          {projects.map((project) => (
            <ProjectCard project={project} />
          ))}
        </div>
      </section>
    </main>

    <footer class="mx-auto max-w-2xl px-6 pb-12 pt-16">
      <p class="text-xs text-neutral-600">
        &copy; {new Date().getFullYear()} Aashray Mehta
      </p>
    </footer>
  </body>
</html>
