---
import type { Project } from '../data/projects'

interface Props {
  project: Project
}

const { project } = Astro.props

const statusColor: Record<Project['status'], string> = {
  live: 'bg-green-500',
  wip: 'bg-yellow-500',
  archived: 'bg-neutral-600',
}
---

<a
  href={project.url}
  target="_blank"
  rel="noopener noreferrer"
  class="group block rounded-lg border border-neutral-800 p-5 transition-colors hover:border-neutral-600 hover:bg-neutral-900/50"
>
  <div class="flex items-center gap-2">
    <span class={`inline-block h-2 w-2 rounded-full ${statusColor[project.status]}`}></span>
    <h3 class="font-mono text-lg font-semibold text-white group-hover:text-neutral-200">
      {project.name}
    </h3>
  </div>
  <p class="mt-2 text-sm text-neutral-400">
    {project.description}
  </p>
  <div class="mt-3 flex flex-wrap gap-2">
    {project.tags.map((tag) => (
      <span class="rounded-full bg-neutral-800 px-2.5 py-0.5 text-xs text-neutral-300">
        {tag}
      </span>
    ))}
  </div>
</a>
